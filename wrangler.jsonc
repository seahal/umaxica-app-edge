/**
 * Root Wrangler config to support CI/CD running from repo root.
 * Delegates build and entry to the com workspace outputs.
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "umaxica-edge-com",
	"compatibility_date": "2025-04-04",
	// Delegate to the com/ workspace Module Worker entry
	"main": "./com/workers/app.ts",
	// Ensure server/client bundles exist before Wrangler runs in CI
	"build": { "command": "npm run -w com build" },
	"observability": { "enabled": true }
}
