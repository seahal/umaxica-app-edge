{
  "name": "umaxica-edge",
  "type": "module",
  "scripts": {
    "server": "bunx vite",
    "build": "bunx vite build && bunx vite build --ssr",
    "preview": "bun run build && bunx wrangler dev dist-server/index.js",
    "deploy": "bun run build && bunx wrangler deploy dist-server/index.js",
    "cf-typegen": "bunx wrangler types --env-interface CloudflareBindings",
    "format": "bunx @biomejs/biome format src/ --write",
    "lint": "bunx @biomejs/biome lint src/ --fix",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@rails/request.js": "^0.0.12",
    "hono": "^4.7.11",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "^0.1.21",
    "@cloudflare/workers-types": "^4.20250614.0",
    "@hono/vite-build": "^1.6.2",
    "@types/bun": "^1.2.16",
    "dotenv": "^16.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-ssr-hot-reload": "^0.4.2",
    "wrangler": "^4.20.0",
    "hono-react-router-adapter": "^0.6.5"
  },
  "module": "src/index.tsx",
  "private": true
}
