{
	"name": "umaxica-edge",
	"type": "module",
	"scripts": {
		"dev": "bun run --hot app/server.tsx",
		"dev:com": "cd com && bunx wrangler dev --port 4001",
		"dev:app": "cd app && bunx wrangler dev --port 4002",
		"dev:org": "cd org && bunx wrangler dev --port 4003",
		"deploy:com": "cd com && bunx wrangler deploy",
		"deploy:app": "cd app && bunx wrangler deploy",
		"deploy:org": "cd org && bunx wrangler deploy",
		"build": "vite build && cp -r public/* dist/",
		"preview": "vite preview",
		"deploy": "bun run build && bunx wrangler deploy",
		"cf-typegen": "bunx wrangler types --env-interface CloudflareBindings",
		"format": "bunx @biomejs/biome format . --write",
		"lint": "bunx @biomejs/biome lint . --fix",
		"typecheck": "bunx tsc --noEmit",
		"test": "bun test"
	},
	"dependencies": {
		"@types/react-router": "^5.1.20",
		"hono": "^4.9.0",
		"hono-react-router-adapter": "^0.6.5",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "^7.8.0",
		"react-router-dom": "^7.8.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@cloudflare/workers-types": "^4.20250809.0",
		"@testing-library/react": "^16.3.0",
		"@types/bun": "^1.2.19",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@typescript/native-preview": "^7.0.0-dev.20250809.1",
		"happy-dom": "^18.0.1",
		"typescript": "^5.9.2",
		"wrangler": "^4.28.1"
	},
	"module": "app/server.tsx",
	"private": true
}
