{
	"name": "umaxica-edge",
	"type": "module",
	"scripts": {
		"dev": "bun run --hot app/server.tsx",
		"build": "bun build app/server.tsx --target=node --format=esm --outdir=dist-server",
		"preview": "vite preview",
		"deploy": "bun run build && bunx wrangler deploy",
		"cf-typegen": "bunx wrangler types --env-interface CloudflareBindings",
		"format": "bunx @biomejs/biome format app/ --write",
		"lint": "bunx @biomejs/biome lint app/ --fix",
		"typecheck": "bunx tsgo --noEmit",
		"test": "bun test"
	},
	"dependencies": {
		"hono": "^4.8.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^7.6.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@cloudflare/workers-types": "^4.20250703.0",
		"@types/bun": "^1.2.18",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@typescript/native-preview": "^7.0.0-dev.20250703.1",
		"bun": "^1.2.18",
		"typescript": "^5.8.3",
		"vite": "^7.0.1",
		"wrangler": "^4.23.0"
	},
	"module": "app/server.tsx",
	"private": true
}
