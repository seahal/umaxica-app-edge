{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "src/**/*",
    "src/**/.server/**/*",
    "src/**/.client/**/*",
    "workers/**/*",
    "./edge-runtime.ts",
    "worker-configuration.d.ts",
    "virtual-modules.d.ts",
    "react-router-types.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client", "./worker-configuration.d.ts"],
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "*": ["./*"],
      "~/*": ["./src/*"],
      "@app/*": ["./src/*"],
      "@app/test/*": ["./test/*"],
      "@com/*": ["../com/src/*"],
      "@com/test/*": ["../com/test/*"],
      "@org/*": ["../org/src/*"],
      "@org/test/*": ["../org/test/*"]
    },
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "moduleSuffixes": [""],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
