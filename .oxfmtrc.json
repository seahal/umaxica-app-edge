{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "insertFinalNewline": true,
  "sortPackageJson": true,
  "overrides": [
    {
      "files": ["**/*.json", "**/*.jsonc"],
      "options": {
        "trailingComma": "none"
      }
    },
    {
      "files": ["**/*.md", "**/*.mdx"],
      "options": {
        "printWidth": 80
      }
    }
  ],
  "ignorePatterns": [
    "**/.wrangler/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/build/**",
    "**/.react-router/**",
    "**/+types/**",
    "pnpm-lock.yaml"
  ]
}
