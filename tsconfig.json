{
	"compilerOptions": {
		"target": "ESNext",
		"paths": {
			"*": ["./app/*", "./com/*", "./org/*", "./test/*"]
		},
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client", "bun-types"],
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		// Use Hono JSX
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	}
}
