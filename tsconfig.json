{
	"exclude": ["app/**/*", "com/**/*", "org/**/*, info/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"paths": {
			"@app/*": ["./app/src/*"],
			"@app/test/*": ["./app/test/*"],
			"@com/*": ["./com/src/*"],
			"@com/test/*": ["./com/test/*"],
			"@org/*": ["./org/src/*"],
			"@org/test/*": ["./org/test/*"],
			"@info/*": ["./info/src/*"],
			"@info/test/*": ["./info/test/*"]
		},
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		// Use @types/bun definitions
		"types": ["vite/client", "bun"],
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"jsx": "react-jsx"
	}
}
