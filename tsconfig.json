{
	"exclude": ["a/**/*", "com/**/*", "org/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"paths": {
			"*": ["./app/*", "./com/*", "./org/*"]
		},
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client", "bun-types"],
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"jsx": "react-jsx"
	}
}
