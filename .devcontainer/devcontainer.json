{
	"name": "umaxica-app-edge",
	"dockerComposeFile": ["../compose.yml"],
	"service": "edge",
	"workspaceFolder": "/edge",
	"runServices": ["edge"],
	"overrideCommand": false,
	"postCreateCommand": "bun install",
	"forwardPorts": [4000, 5170, 5171, 5172, 5173],
	"portsAttributes": {
		"4000": {
			"label": "Vite Dev Server"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"files.eol": "\n"
			}
		}
	}
}
