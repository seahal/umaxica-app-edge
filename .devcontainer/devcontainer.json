{
	"name": "umaxica-app-edge",
	"dockerComposeFile": ["../compose.yml"],
	"service": "main",
	"workspaceFolder": "/home/edge/main",
	"runServices": ["main"],
	"overrideCommand": false,
	"postCreateCommand": "bun install",
	"forwardPorts": [4000, 5170, 5171, 5172, 5173],
	"portsAttributes": {
		"4000": {
			"label": "Vite Dev Server"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"dbaeumer.vscode-eslint"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"files.eol": "\n"
			}
		}
	},
	"features": {
		"ghcr.io/anthropics/devcontainer-features/claude-code:latest": {},
		"ghcr.io/thamaji/devcontainer-features/codex-cli:latest": {
			"VERSION": "latest"
		},
		"ghcr.io/thamaji/devcontainer-features/lefthook:latest": {
      		"VERSION": "latest"
    	}
	},
	"mounts": [
		"source=${localEnv:HOME}/.claude,target=~/main/.claude,type=bind",
		"source=${localEnv:HOME}/.codex,target=~/main/.codex,type=bind"
	]
}
