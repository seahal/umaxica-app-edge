{
  "name": "umaxica-app-edge",
  "dockerComposeFile": ["../compose.yml", "./compose.override.yml"],
  "service": "core",
  "remoteUser": "edge",
  "workspaceFolder": "/home/edge/workspace",
  "shutdownAction": "none",
  "runServices": ["core"],
  "overrideCommand": false,

  "forwardPorts": [5173, 8780, 8781, 8782],
  "portsAttributes": {
    "8781": {
      "label": "App Domain (app)",
      "onAutoForward": "notify"
    },
    "8780": {
      "label": "Com Domain (com)",
      "onAutoForward": "notify"
    },
    "8782": {
      "label": "Org Domain (org)",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Net Domain (net)",
      "onAutoForward": "notify"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode",
        "biomejs.biome",
        "openai.chatgpt",
        "anthropic.claude-code",
        "bradlc.vscode-tailwindcss",
        "-dbaeumer.vscode-eslint",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-containers",
        "GitHub.codespaces",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/marcosbolanos/devcontainer-features/neovim-prebuilt:1": {},
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/stu-bell/devcontainer-features/gemini-cli:0": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/codex:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/opencode:1": {}
  },
  "containerEnv": {}
}
