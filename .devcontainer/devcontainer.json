{
  "name": "umaxica-app-edge",
  "dockerComposeFile": ["../compose.yml", "./compose.override.yml"],
  "service": "core",
  "remoteUser": "edge",
  "containerUser": "edge",
  "workspaceFolder": "/home/edge/workspace",
  "shutdownAction": "stopCompose",
  "runServices": ["core"],
  "overrideCommand": false,
  "remoteEnv": {
    "EDITOR": "code --wait --reuse-window",
    "DEBUGGER_DISABLE": "1"
  },

  "forwardPorts": [5173, 8780, 8781, 8782],
  "portsAttributes": {
    "8781": {
      "label": "App Domain (app)",
      "onAutoForward": "notify"
    },
    "8780": {
      "label": "Com Domain (com)",
      "onAutoForward": "notify"
    },
    "8782": {
      "label": "Org Domain (org)",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Net Domain (net)",
      "onAutoForward": "notify"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "openai.chatgpt",
        "anthropic.claude-code",
        "bradlc.vscode-tailwindcss",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "ms-vscode.remote-explorer",
        "GitHub.codespaces",
        "ms-vscode-remote.remote-containers",
        "nicolo-ribaudo.oxfmt-vscode",
        "nicolo-ribaudo.oxc-vscode",
        "ms-playwright.playwright",

        "-dbaeumer.vscode-eslint",
        "-esbenp.prettier-vscode",
        "-eamodio.gitlens",
        "-GitHub.copilot",
        "-GitHub.copilot-chat"
      ],
      "settings": {
        "claude.allowDangerouslySkipPermissions": true,
        "extensions.verifySignature": false,
        "editor.defaultFormatter": "nicolo-ribaudo.oxfmt-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.eol": "\n",
        "files.associations": {
          "compose.yml": "yaml",
          "*.yml": "yaml"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          },
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/marcosbolanos/devcontainer-features/neovim-prebuilt:1": {},
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/stu-bell/devcontainer-features/gemini-cli:0": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/codex:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/opencode:1": {},
    "ghcr.io/devcontainers/features/sshd:latest": {},
    "ghcr.io/devcontainers-extra/features/lefthook-asdf:1": {},
    "ghcr.io/jasonthedeveloper/features/trivy:1": {}
  },
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/edge/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/edge/.claude.json,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.copilot,target=/home/edge/.copilot,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.codex,target=/home/edge/.codex,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gemini,target=/home/edge/.gemini,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/opencode,target=/home/edge/.config/opencode,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/edge/.config/gh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/git,target=/home/edge/.config/git,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.local/share/opencode,target=/home/edge/.local/share/opencode,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.local/state/opencode,target=/home/edge/.local/state/opencode,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/edge/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/edge/.ssh,type=bind,consistency=cached"
  ],
  "updateRemoteUserUID": true,
  "postCreateCommand": "sudo chown -R 1000:1000 /home/edge/"
}
