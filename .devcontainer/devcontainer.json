{
	"name": "umaxica-app-edge",
	"dockerComposeFile": ["../compose.yml"],
	"service": "main",
	"workspaceFolder": "/home/edge/main",
	"runServices": ["main"],
	"overrideCommand": false,
	"postCreateCommand": "bun install && bun run cf-typegen",
	"postStartCommand": "git config --global --add safe.directory /home/edge/main",
	"forwardPorts": [5170, 5171, 5172, 5173],
	"portsAttributes": {
		"5170": {
			"label": "Dev Domain (dev)",
			"onAutoForward": "notify"
		},
		"5171": {
			"label": "App Domain (app)",
			"onAutoForward": "notify"
		},
		"5172": {
			"label": "Com Domain (com)",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Org Domain (org)",
			"onAutoForward": "notify"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"openai.chatgpt",
				"anthropic.claude-code",
				"bradlc.vscode-tailwindcss",
				"-dbaeumer.vscode-eslint",
				"-GitHub.copilot-chat"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"files.eol": "\n",
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					}
				}
			}
		}
	},
	"features": {
		"ghcr.io/thamaji/devcontainer-features/lefthook:latest": {
			"VERSION": "latest"
		},
		"ghcr.io/jsburckhardt/devcontainer-features/gitleaks:1": {}
	},
	"containerEnv": {
		"NODE_OPTIONS": "--max-old-space-size=4096",
		"POWERLEVEL9K_DISABLE_GITSTATUS": "true"
	}
}
