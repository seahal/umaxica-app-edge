{
	"name": "umaxica-app-edge-vscode",
	"dockerComposeFile": ["../compose.yml", "./compose.override.yml"],
	"service": "core",
	"remoteUser": "edge",
	"workspaceFolder": "/home/edge/workspace",

	"runServices": ["core"],
	"overrideCommand": false,

	"forwardPorts": [5170, 5171, 5172, 5173],
	"portsAttributes": {
		"5170": {
			"label": "Dev Domain (dev)",
			"onAutoForward": "notify"
		},
		"5171": {
			"label": "App Domain (app)",
			"onAutoForward": "notify"
		},
		"5172": {
			"label": "Com Domain (com)",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Org Domain (org)",
			"onAutoForward": "notify"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"openai.chatgpt",
				"anthropic.claude-code",
				"bradlc.vscode-tailwindcss",
				"-dbaeumer.vscode-eslint",
				"github.vscode-github-actions",
				"ms-azuretools.vscode-containers",
				"GitHub.codespaces",
				"ms-vscode-remote.remote-containers"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"files.eol": "\n",
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					}
				}
			}
		}
	},

	"features": {},
	"containerEnv": {}
}
