{
	"name": "umaxica-app-edge",
	"dockerComposeFile": ["../compose.yml"],
	"service": "main",
	"workspaceFolder": "/home/edge/main",
	"runServices": ["main"],
	"overrideCommand": false,
	"postCreateCommand": "bun install",
	"forwardPorts": [4000, 5130, 5131, 5132, 5133],
	"portsAttributes": {
		"4000": {
			"label": "Vite Dev Server"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"oven.bun-vscode",
				"biomejs.biome",
				"openai.chatgpt",
				"anthropic.claude-code",
				"bradlc.vscode-tailwindcss",
				"-dbaeumer.vscode-eslint",
				"-GitHub.copilot-chat"
			],
			"settings": {
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"files.eol": "\n"
			},
			"terminal.integrated.defaultProfile.linux": "bash",
			"terminal.integrated.profiles.linux": {
				"bash": {
					"path": "bash",
					"icon": "terminal-bash"
				},
				"zsh": {
					"path": "zsh"
				}
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/thamaji/devcontainer-features/lefthook:latest": {
			"VERSION": "latest"
		},
		"ghcr.io/jsburckhardt/devcontainer-features/codex:latest": {},
		"ghcr.io/anthropics/devcontainer-features/claude-code:latest": {},
		"ghcr.io/jsburckhardt/devcontainer-features/gitleaks:1": {}
	},
	"mounts": [
		"source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
		"source=claude-code-config-${devcontainerId},target=/home/edge/.claude,type=volume"
		//		"source=${localEnv:HOME}/.codex,target=/home/edge/.codex,type=volume"
	],
	"containerEnv": {
		"NODE_OPTIONS": "--max-old-space-size=4096",
		"POWERLEVEL9K_DISABLE_GITSTATUS": "true"
	} //,
	// "mounts": [
	// 	"source=${localEnv:HOME}/.claude,target=~/main/.claude,type=bind",
	// 	"source=${localEnv:HOME}/.codex,target=~/main/.codex,type=bind"
	//]
}
